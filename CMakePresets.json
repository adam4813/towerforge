{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "description": "Default configuration using vcpkg toolchain",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "native",
      "displayName": "Native",
      "inherits": "base"
    },
    {
      "name": "test",
      "displayName": "Test Configuration",
      "inherits": "base",
      "description": "Configuration for running tests"
    }
  ],
  "buildPresets": [
    {
      "name": "native-debug",
      "displayName": "Native Debug",
      "configurePreset": "native",
      "configuration": "Debug"
    },
    {
      "name": "native-release",
      "displayName": "Native Release",
      "configurePreset": "native",
      "configuration": "Release"
    },
    {
      "name": "test-debug",
      "displayName": "Test Debug",
      "configurePreset": "test",
      "configuration": "Debug"
    },
    {
      "name": "test-release",
      "displayName": "Test Release",
      "configurePreset": "test",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "test-debug",
      "displayName": "Test Debug",
      "configurePreset": "test",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-release",
      "displayName": "Test Release",
      "configurePreset": "test",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
