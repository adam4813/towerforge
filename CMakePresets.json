{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "description": "Default configuration using vcpkg toolchain",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "cli-base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build-cli/${presetName}",
      "description": "CLI/Copilot configuration using vcpkg toolchain (isolated from IDE)",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "native",
      "displayName": "Native",
      "inherits": "base"
    },
    {
      "name": "cli-native",
      "displayName": "CLI Native",
      "inherits": "cli-base",
      "description": "Native build for CLI/Copilot (isolated from IDE builds)"
    },
    {
      "name": "test",
      "displayName": "Test Configuration",
      "inherits": "base",
      "description": "Configuration for running tests"
    },
    {
      "name": "cli-test",
      "displayName": "CLI Test Configuration",
      "inherits": "cli-base",
      "description": "Test configuration for CLI/Copilot (isolated from IDE builds)"
    }
  ],
  "buildPresets": [
    {
      "name": "native-debug",
      "displayName": "Native Debug",
      "configurePreset": "native",
      "configuration": "Debug"
    },
    {
      "name": "native-release",
      "displayName": "Native Release",
      "configurePreset": "native",
      "configuration": "Release"
    },
    {
      "name": "cli-native-debug",
      "displayName": "CLI Native Debug",
      "configurePreset": "cli-native",
      "configuration": "Debug"
    },
    {
      "name": "cli-native-release",
      "displayName": "CLI Native Release",
      "configurePreset": "cli-native",
      "configuration": "Release"
    },
    {
      "name": "test-debug",
      "displayName": "Test Debug",
      "configurePreset": "test",
      "configuration": "Debug"
    },
    {
      "name": "test-release",
      "displayName": "Test Release",
      "configurePreset": "test",
      "configuration": "Release"
    },
    {
      "name": "cli-test-debug",
      "displayName": "CLI Test Debug",
      "configurePreset": "cli-test",
      "configuration": "Debug"
    },
    {
      "name": "cli-test-release",
      "displayName": "CLI Test Release",
      "configurePreset": "cli-test",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "test-debug",
      "displayName": "Test Debug",
      "configurePreset": "test",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-release",
      "displayName": "Test Release",
      "configurePreset": "test",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "cli-test-debug",
      "displayName": "CLI Test Debug",
      "configurePreset": "cli-test",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "cli-test-release",
      "displayName": "CLI Test Release",
      "configurePreset": "cli-test",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
